<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Settings - WhatsApp Bot</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100">
    <nav class="bg-green-600 text-white shadow-lg">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center h-16">
                <div class="flex items-center">
                    <i class="fab fa-whatsapp text-2xl mr-2"></i>
                    <span class="text-xl font-bold">WhatsApp Bot</span>
                </div>
                <div class="flex items-center space-x-4">
                    <a href="/dashboard" class="hover:bg-green-700 px-3 py-2 rounded-md">
                        <i class="fas fa-tachometer-alt mr-2"></i>Dashboard
                    </a>
                    <a href="/keywords" class="hover:bg-green-700 px-3 py-2 rounded-md">
                        <i class="fas fa-key mr-2"></i>Keywords
                    </a>
                    <a href="/greetings" class="hover:bg-green-700 px-3 py-2 rounded-md">
                        <i class="fas fa-hand-wave mr-2"></i>Greetings
                    </a>
                    <a href="/settings" class="bg-green-700 px-3 py-2 rounded-md">
                        <i class="fas fa-cog mr-2"></i>Settings
                    </a>
                    <div class="border-l border-green-500 h-6 mx-2"></div>
                    <span class="text-sm">Welcome, <%= user.username %></span>
                    <a href="/logout" class="hover:bg-red-600 px-3 py-2 rounded-md">
                        <i class="fas fa-sign-out-alt mr-2"></i>Logout
                    </a>
                </div>
            </div>
        </div>
    </nav>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <div class="mb-8">
            <h1 class="text-3xl font-bold text-gray-900">Settings</h1>
            <p class="text-gray-600">Configure bot settings and default responses</p>
        </div>

        <!-- Default Reply Settings -->
        <div class="bg-white rounded-lg shadow-md p-6 mb-8">
            <h2 class="text-xl font-bold text-gray-900 mb-4">
                <i class="fas fa-reply mr-2 text-orange-600"></i>Default Reply
            </h2>
            <p class="text-gray-600 mb-6">Configure the default response when no keywords match the user's message.</p>
            
            <form id="defaultReplyForm">
                <div class="space-y-4">
                    <div class="flex items-center">
                        <input 
                            type="checkbox" 
                            id="defaultReplyEnabled" 
                            name="enabled" 
                            class="h-4 w-4 text-green-600 focus:ring-green-500 border-gray-300 rounded"
                            <%= settings.defaultReply.enabled ? 'checked' : '' %>
                        >
                        <label for="defaultReplyEnabled" class="ml-2 block text-sm text-gray-900">
                            Enable default reply for unmatched messages
                        </label>
                    </div>
                    
                    <div>
                        <label for="defaultReplyMessage" class="block text-sm font-medium text-gray-700 mb-2">
                            Default Reply Message
                        </label>
                        <textarea 
                            id="defaultReplyMessage" 
                            name="message" 
                            rows="4"
                            class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-green-500"
                            placeholder="Enter the default reply message..."
                        ><%= settings.defaultReply.message %></textarea>
                        <p class="text-sm text-gray-500 mt-1">
                            This message will be sent when no keywords or greetings match the user's message.
                        </p>
                    </div>
                </div>
                
                <div class="flex justify-end mt-6">
                    <button 
                        type="submit" 
                        class="bg-green-600 text-white px-6 py-2 rounded-lg hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2 transition duration-200"
                    >
                        <i class="fas fa-save mr-2"></i>Save Settings
                    </button>
                </div>
            </form>
        </div>

        <!-- Additional Settings Card -->
        <div class="bg-white rounded-lg shadow-md p-6">
            <h2 class="text-xl font-bold text-gray-900 mb-4">
                <i class="fas fa-info-circle mr-2 text-blue-600"></i>How It Works
            </h2>
            <div class="space-y-4 text-gray-600">
                <div class="flex items-start">
                    <div class="flex-shrink-0 w-8 h-8 bg-blue-100 rounded-full flex items-center justify-center mt-0.5">
                        <span class="text-blue-600 font-semibold text-sm">1</span>
                    </div>
                    <div class="ml-3">
                        <p class="font-medium text-gray-900">Check Greetings</p>
                        <p class="text-sm">The bot first checks if the message contains any greeting keywords.</p>
                    </div>
                </div>
                
                <div class="flex items-start">
                    <div class="flex-shrink-0 w-8 h-8 bg-blue-100 rounded-full flex items-center justify-center mt-0.5">
                        <span class="text-blue-600 font-semibold text-sm">2</span>
                    </div>
                    <div class="ml-3">
                        <p class="font-medium text-gray-900">Check Keywords</p>
                        <p class="text-sm">If no greetings match, the bot checks for keyword triggers.</p>
                    </div>
                </div>
                
                <div class="flex items-start">
                    <div class="flex-shrink-0 w-8 h-8 bg-orange-100 rounded-full flex items-center justify-center mt-0.5">
                        <span class="text-orange-600 font-semibold text-sm">3</span>
                    </div>
                    <div class="ml-3">
                        <p class="font-medium text-gray-900">Default Reply</p>
                        <p class="text-sm">If no keywords match and default reply is enabled, the bot sends the default message.</p>
                    </div>
                </div>
                
                <div class="flex items-start">
                    <div class="flex-shrink-0 w-8 h-8 bg-gray-100 rounded-full flex items-center justify-center mt-0.5">
                        <span class="text-gray-600 font-semibold text-sm">4</span>
                    </div>
                    <div class="ml-3">
                        <p class="font-medium text-gray-900">No Response</p>
                        <p class="text-sm">If default reply is disabled, the bot remains silent for unmatched messages.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Success Toast -->
    <div id="successToast" class="fixed top-4 right-4 bg-green-500 text-white px-6 py-3 rounded-lg shadow-lg transform translate-x-full transition-transform duration-300 z-50">
        <div class="flex items-center">
            <i class="fas fa-check-circle mr-2"></i>
            <span>Settings saved successfully!</span>
        </div>
    </div>

    <!-- Error Toast -->
    <div id="errorToast" class="fixed top-4 right-4 bg-red-500 text-white px-6 py-3 rounded-lg shadow-lg transform translate-x-full transition-transform duration-300 z-50">
        <div class="flex items-center">
            <i class="fas fa-exclamation-circle mr-2"></i>
            <span>Error saving settings!</span>
        </div>
    </div>

    <script>
        // Show toast notification
        function showToast(type, message) {
            const toast = document.getElementById(type + 'Toast');
            const span = toast.querySelector('span');
            if (message) {
                span.textContent = message;
            }
            
            toast.classList.remove('translate-x-full');
            setTimeout(() => {
                toast.classList.add('translate-x-full');
            }, 3000);
        }

        // Handle form submission
        document.getElementById('defaultReplyForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            
            const formData = new FormData(e.target);
            const data = {
                defaultReply: {
                    enabled: formData.has('enabled'),
                    message: formData.get('message')
                }
            };

            try {
                const response = await fetch('/api/settings', {
                    method: 'PUT',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(data)
                });

                if (response.ok) {
                    showToast('success', 'Settings saved successfully!');
                } else {
                    showToast('error', 'Error saving settings!');
                }
            } catch (error) {
                console.error('Error saving settings:', error);
                showToast('error', 'Error saving settings!');
            }
        });

        // Load current settings
        async function loadSettings() {
            try {
                const response = await fetch('/api/settings');
                const settings = await response.json();
                
                document.getElementById('defaultReplyEnabled').checked = settings.defaultReply.enabled;
                document.getElementById('defaultReplyMessage').value = settings.defaultReply.message;
            } catch (error) {
                console.error('Error loading settings:', error);
            }
        }

        // Load settings on page load
        loadSettings();
    </script>
</body>
</html>
